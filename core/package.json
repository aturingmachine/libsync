{
  "name": "lib-sync-core",
  "version": "0.0.1",
  "description": "sync two directories on windows",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "tsc && node ./dist/index.js",
    "build": "tsc",
    "start": "npm run build && node ./dist/index.js",
    "dev": "tsc --watch & nodemon ./dist/index.js -- debug",
    "single-run": "npm sun start",
    "help": "npm run start -- help",
    "lint": "eslint --fix"
  },
  "author": "",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "client/libsync-client/*.*",
      "test-data/*.*",
      "scripts/*.*",
      "temp/*.*",
      "logs/*.*",
      "dist/client/*"
    ],
    "delay": 4000
  },
  "dependencies": {
    "express": "^4.17.1",
    "lowdb": "^2.1.0",
    "pidusage": "^2.0.21",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "ws": "^7.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/lowdb": "^1.0.10",
    "@types/node": "^15.12.4",
    "@types/pidusage": "^2.0.1",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.5",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "2.3.1",
    "typescript": "^4.3.4"
  }
}
